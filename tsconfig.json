{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "newLine": "lf",
    "baseUrl": "./src",
    "paths": {
      "test": ["test/*"],
      "helpers/*": ["helpers/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/*.test.ts","**/test", "**/dest"],
  "ts-node": {
    "files": true,
  }
}
